<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/dialog_update_app_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="New version is available. Update the App to continue."
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_update_app_txt"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/dialog_update_app_later_btn"
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="90dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="Later"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/dialog_update_app_exit_btn"
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="90dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="Exit"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/dialog_update_app_update_btn"
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/onboard_next_btn"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>