<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/note_item_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        tools:cardBackgroundColor="@color/colorAccent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/note_item_pin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_pushpin"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/note_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:transitionName="note_title"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/note_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/note_item_title"
                android:ellipsize="end"
                android:maxLines="7"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:transitionName="note_description"
                tools:text="@tools:sample/lorem/random" />

            <TextView
                android:id="@+id/note_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_item_description"
                android:layout_marginTop="10dp"
                android:textColor="@color/brown"
                android:textSize="12sp"
                tools:text="@tools:sample/date/ddmmyy" />

            <TextView
                android:id="@+id/note_item_deleted_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_item_description"
                android:layout_marginTop="10dp"
                android:textColor="@color/brown"
                android:visibility="gone"
                android:textSize="12sp"
                tools:text="@tools:sample/date/ddmmyy" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>