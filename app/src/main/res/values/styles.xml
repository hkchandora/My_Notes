<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:toolbarStyle">@style/AppTheme.ToolbarStyle</item>
        <item name="toolbarStyle">@style/AppTheme.ToolbarStyle</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
    </style>

    <style name="CropTheme" parent="Theme.MaterialComponents.Light.DarkActionBar"/>

    <style name="AppTheme.ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <!--<item name="actionOverflowButtonStyle">@style/AppTheme.OverflowButtonStyle</item>-->
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="titleTextAppearance">@string/add_note</item>
        <item name="titleTextColor">@android:color/black</item>
    </style>
</resources>
